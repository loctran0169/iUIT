<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/fragment_intro">
    <fragment
        android:id="@+id/fragment_intro"
        android:label="Intro Fragment"
        android:name="vn.edu.uit.managementforstudents.ui.fragments.intro.IntroFragment"
        tools:layout="@layout/fragment_intro">
        <action
            android:id="@+id/action_fragment_intro_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_fragment_intro_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_fragment_intro_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_fragment_intro_to_forgotPasswordFragment2"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="vn.edu.uit.managementforstudents.ui.fragments.intro.forgot_password.ForgotPasswordFragment"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="vn.edu.uit.managementforstudents.ui.fragments.intro.login.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/main_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:label="Main Fragment"
        android:name="vn.edu.uit.managementforstudents.ui.fragments.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_fragment_intro"
            app:destination="@id/fragment_intro"
            app:launchSingleTop="true"
            app:popUpTo="@+id/main_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_editAccountFragment"
            app:destination="@id/editAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="vn.edu.uit.managementforstudents.ui.fragments.intro.register.RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/editAccountFragment"
        android:name="vn.edu.uit.managementforstudents.ui.fragments.account_edit.EditAccountFragment"
        tools:layout="@layout/bottom_sheet_edit_account"/>
</navigation>